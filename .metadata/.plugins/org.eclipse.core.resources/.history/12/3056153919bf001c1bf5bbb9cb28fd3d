package sec1;

public class Assignment1 {

	public static void main(String[] args) {
		
		// 대입 연산자
		int a =30;
		int b;
		b = a;
		a += 1;	// a = a + 1
		a += 3;	// a = a + 3
		System.out.println("a = " + a);	// 34
		a -= 2;	// a = a -2
		System.out.println("a = " + a);	// 32
		a /= 3; // a = a / 3
		System.out.println("a = " + a);	// 10
		a *= 4;
		System.out.println("a = " + a);	// 40
		a %= 7;
		System.out.println("a = " + a);	// 5

	}

}
